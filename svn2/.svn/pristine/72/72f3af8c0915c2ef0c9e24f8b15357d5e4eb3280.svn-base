<script type="text/javascript">
    var goEasy = new GoEasy({
        appkey: 'BC-58a22e706d3342ecafd6bd784c07d335'
    });
    goEasy.subscribe({
        channel:'seckill',
        onMessage: function(message){
            alert('收到：'+message.content);
        }
    });

    function fn1() {
		var element = document.getElementById("toPage").value;
		var page = document.getElementById("page");
		alert(element)
		page.value=element;
		var form = document.getElementById("frm");
		form.submit();
    }

    function fn2(p) {
        if (p==1){
            alert("前面没有页码了")
		}else {
            var page = document.getElementById("page");
            page.value=parseInt(p)-1;
            var form = document.getElementById("frm");
            form.submit();
		}
    }

    function fn3(p,k) {
		if (p==k){
		    alert("后面没有页码了")
		}else {
            var page = document.getElementById("page");
            page.value=parseInt(p)+1
            var form = document.getElementById("frm");
            form.submit();
		}
    }
</script>
