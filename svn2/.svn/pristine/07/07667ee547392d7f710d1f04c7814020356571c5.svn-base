
<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">

<head>
    <meta charset="utf-8">
    <title>一元秒杀</title>

    <script type="text/javascript" src="/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            var times = 30 * 100; // 60秒
            countTime = setInterval(function() {
                times = --times < 0 ? 0 : times;
                var ms = Math.floor(times / 100).toString();

                if(ms.length <= 1) {
                    ms = "0" + ms;
                }
                var hm = Math.floor(times % 100).toString();
                if(hm.length <= 1) {
                    hm = "0" + hm;
                }
                if(times == 0) {
                    document.getElementById("bt").disabled=false;
                    clearInterval(countTime);
                }else {
                    document.getElementById("bt").disabled=true;
                }
                // 获取分钟、毫秒数
                $(".a").html(ms);
                $(".b").html(hm);
            }, 10);
        });
        function bt() {
            $.post("/seckill/judge",{},function (data) {
                if(data == "000"){
                    alert("恭喜，秒杀成功,前往订单详情支付")
                    document.getElementById("bt").disabled=true;
                }else if(data == "001"){
                    alert("秒杀失败，请等待下次活动")
                }
            });
        }
    </script>
    <style>
        .warp{
            width: 100%;
            height: 100px;
            line-height: 100px;
            text-align: center;
            font-size: 40px;
            font-family: "微软雅黑";
        }
        .warp strong{
            width: 100px;
            display: inline-block;
            text-align: center;
            font-family: georgia;
            color: #C9302C;
        }
    </style>
</head>

<body>

<div class="warp">
    <strong class="a">111</strong>秒 <strong class="b"></strong>毫秒<br>
    <span class="fs14" th:text="${content}">空</span>
    <button type="button" id="bt" onclick="bt()" style="width: 350px;height: 50px;background-color: #1f6b65;color: aliceblue;cursor: pointer;border-radius:5px;">秒杀</button>
</div>

</body>
</html>